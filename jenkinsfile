pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            
                sh 'npm install'  // Instala las dependencias si es necesario
                sh 'node app.js &'  // Inicia tu aplicaci√≥n Node.js en segundo plano
               
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
