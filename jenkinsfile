pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
        stage('Start Server') {
            steps {
                bat 'npm start'
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
