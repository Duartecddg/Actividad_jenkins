pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                // Install dependencies and build your Node.js application
                sh 'npm install'  // Instala las dependencias si es necesario
                sh 'node index.js > output.log 2>&1 &'  // Inicia tu aplicaci√≥n Node.js en segundo plano
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                // Run automated tests for your Node.js application
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Deploy your Node.js application to the server
                // Example: scp files to server, restart services, etc.
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        failure {
            echo '========pipeline execution failed========'
            // Add additional failure handling and notifications here
        }
    }
}
