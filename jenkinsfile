pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your Git repository
                git 'https://github.com/Duartecddg/Actividad_jenkins.git'
            }
        }

        stage('Build') {
            steps {
                // Install dependencies and build your Node.js application
                sh 'npm install'
                sh 'npm run build'
                
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your Node.js application
                sh 'npm start & node index.js'
            }
        }
    }

    post {
        always {
            echo '========always========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
